EAPI="5"
PYTHON_COMPAT=( python2_7 )
inherit distutils-r1

MY_P="${P/_alpha/.dev}"
DESCRIPTION="pyliblinear - a liblinear python API"
HOMEPAGE="http://opensource.perlig.de/pyliblinear/"
SRC_URI="http://storage.perlig.de/pyliblinear/dev/${MY_P}.tar.gz"
RESTRICT="mirror"

LICENSE="Apache-2.0"
SLOT="0"
KEYWORDS="~amd64 ~x86"
IUSE="doc"

S="${WORKDIR}/${MY_P}"
DOCS=( docs/{CHANGES,DESCRIPTION} README.rst )

python_install() {
	distutils-r1_python_install --without-docs || die

    if use doc; then
		dohtml -A py,out -r docs/{apidoc,userdoc} || die
	fi
}
